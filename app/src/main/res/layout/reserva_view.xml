<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="105dp"
    android:background="@drawable/nav_row_ripple"
    android:longClickable="true"
    android:hapticFeedbackEnabled="true"
    android:elevation="4dp"
    android:padding="12dp">

    <ImageView
        android:id="@+id/img_restaurante"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:background="@color/caldroid_light_red"/>

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_toEndOf="@id/img_restaurante"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
        android:id="@+id/txt_restaurante_nombre"
        android:text="Cafe Con Clase"
        android:textSize="@dimen/abc_text_size_headline_material"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txt_reserva_fecha"
            android:text="15 de Junio de 2015"
            android:layout_marginTop="2dp"
            android:layout_below="@id/txt_restaurante_nombre"
            android:textSize="@dimen/abc_text_size_subhead_material"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txt_reserva_hora"
            android:text="A las 22:00"
            android:layout_marginTop="2dp"
            android:layout_below="@id/txt_reserva_fecha"
            android:textSize="@dimen/abc_text_size_subhead_material"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</RelativeLayout>