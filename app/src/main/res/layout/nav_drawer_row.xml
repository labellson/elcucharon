<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="48dp"
    android:background="@drawable/nav_row_ripple">
    <!--android:background="?android:attr/selectableItemBackground">-->

    
    <ImageView
        android:id="@+id/ic_nav_drawer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="16dp" android:paddingEnd="16dp"
        android:src="@drawable/ic_action_favorite"
        android:minHeight="?android:attr/listPreferredItemHeight"/>

    <TextView
        android:id="@+id/label_nav_drawer"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingStart="72dp"
        android:textSize="14sp" android:gravity="center_vertical"
        android:textColor="@color/myTextPrimaryColor"
        android:text="Favoritos"/>
    
</RelativeLayout>